{% extends '::base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('bundles/stikmenreg/css/jumbotron.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{ path('homepage') }}">REGIS</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li{% if path(app.request.attributes.get('_route')) == path('events') %} class="active"{% endif %}><a href="{{ path('events') }}">Events</a></li>
            <li{% if path(app.request.attributes.get('_route')) == path('contact') %} class="active"{% endif %}><a href="{{ path('contact') }}">Contact</a></li>
          </ul>
          {% if is_granted('ROLE_USER') %}
            <ul class="nav navbar-nav navbar-right">
              {% if is_granted('ROLE_ADMIN') %}
                <li{% if path(app.request.attributes.get('_route')) == path('users') %} class="active"{% endif %}><a href="{{ path('users') }}">Users</a></li>
              {% endif %}
              <li><a href="{{ path('logout') }}">Logout</a></li>
            </ul>
          {% else %}
            <form action="{{ path('login_check') }}" method="post" class="navbar-form navbar-right" role="form">
              <div class="form-group">
                <input type="email" id="username" name="_username" placeholder="email" class="form-control">
              </div>
              <div class="form-group">
                <input type="password" id="password" name="_password" placeholder="password" class="form-control">
              </div>
              <button type="submit" class="btn btn-success">Sign in</button>
            </form>
          {% endif %}
        </div><!--/.navbar-collapse -->
      </div>
    </div>

    {% block highlight %}{% endblock %}
    <div class="container">
      {% block content %}{% endblock %}

      <hr>

      <footer class="text-center">
        <p>&copy; Stikmen 2014</p>
      </footer>
    </div> <!-- /container -->
{% endblock %}
